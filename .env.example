# MCP Email Server - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# Email Account Configuration (Legacy Mode)
# ========================================
# Note: For multiple accounts, use email_config.json instead

# Primary email account
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here

# IMAP Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993

# SMTP Configuration  
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
USE_STARTTLS=true

# ========================================
# AI Configuration (Optional)
# ========================================
# Claude API for advanced features (summaries, advanced classification)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# AI Model Selection
AI_MODEL=claude-3-5-sonnet-20241022
AI_PROVIDER=anthropic

# Enable/Disable AI Features
ENABLE_AI_CLASSIFICATION=false
ENABLE_AI_SUMMARIES=false

# ========================================
# Database Configuration
# ========================================
# SQLite database path
DB_PATH=./data/emails.db

# Database settings
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=30

# ========================================
# Server Configuration
# ========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed logging
DEBUG=false

# ========================================
# Priority Rules Configuration
# ========================================
# Path to priority rules configuration
PRIORITY_RULES_PATH=./config/priority_rules.json

# Path to AI configuration
AI_CONFIG_PATH=./config/ai_config.json

# ========================================
# Cache Configuration
# ========================================
# Cache TTL in hours
CLASSIFICATION_CACHE_TTL_HOURS=24
PRIORITY_CACHE_TTL_HOURS=12

# Max cache size (number of entries)
MAX_CACHE_SIZE=10000

# ========================================
# Cleanup Configuration
# ========================================
# Auto-cleanup old emails (days)
AUTO_CLEANUP_DAYS=30

# Run cleanup on startup
CLEANUP_ON_STARTUP=true

# ========================================
# Feature Flags
# ========================================
# Enable experimental features
ENABLE_SEMANTIC_SEARCH=false
ENABLE_THREAD_DETECTION=false
ENABLE_AUTO_CATEGORIZATION=true

# ========================================
# Performance Tuning
# ========================================
# Batch size for bulk operations
BATCH_SIZE=100

# Concurrent workers for processing
MAX_WORKERS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# ========================================
# Security
# ========================================
# Enable TLS verification
TLS_VERIFY=true

# Minimum TLS version (1.2 or 1.3)
MIN_TLS_VERSION=1.2

# ========================================
# Monitoring & Metrics
# ========================================
# Enable metrics collection
ENABLE_METRICS=false

# Metrics port (if enabled)
METRICS_PORT=9090

# Enable profiling (development only)
ENABLE_PROFILING=false

# ========================================
# Scheduled Tasks
# ========================================
# Enable daily summaries
ENABLE_DAILY_SUMMARY=false

# Daily summary time (24h format)
DAILY_SUMMARY_TIME=09:00

# Weekly report day (0=Sunday, 1=Monday, etc.)
WEEKLY_REPORT_DAY=1
WEEKLY_REPORT_TIME=09:00

# ========================================
# Email Provider Specific Settings
# ========================================

# Gmail specific
GMAIL_BATCH_SIZE=50
GMAIL_RATE_LIMIT_DELAY_MS=100

# Outlook specific
OUTLOOK_BATCH_SIZE=50
OUTLOOK_RATE_LIMIT_DELAY_MS=200

# Yahoo specific
YAHOO_BATCH_SIZE=30
YAHOO_RATE_LIMIT_DELAY_MS=150

# ========================================
# Development & Testing
# ========================================
# Test mode (don't actually send emails)
TEST_MODE=false

# Mock AI responses
MOCK_AI=false

# Verbose test output
VERBOSE_TESTS=false

# ========================================
# Notes
# ========================================
# 
# Gmail Setup:
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password in EMAIL_PASSWORD
#
# Outlook Setup:
# 1. Enable IMAP in Outlook settings
# 2. Use your regular password or app password
# 3. Server: outlook.office365.com (IMAP), smtp-mail.outlook.com (SMTP)
#
# Yahoo Setup:
# 1. Enable IMAP in Yahoo Mail settings
# 2. Generate App Password if using 2FA
# 3. Server: imap.mail.yahoo.com (IMAP), smtp.mail.yahoo.com (SMTP)
#
# For multiple accounts:
# Use email_config.json instead of environment variables
# See email_config.example.json for the format
#
